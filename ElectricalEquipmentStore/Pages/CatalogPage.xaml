<Page x:Class="ElectricalEquipmentStore.Pages.CatalogPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ElectricalEquipmentStore.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CatalogPage" Background="#F5F9FF">

    <Page.Resources>
        <Style x:Key="ProductCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <Style x:Key="CatalogButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#4A90E2"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Панель фильтров -->
        <Border Grid.Row="0" 
                Background="White" 
                Padding="20,15" 
                Margin="0,0,0,10">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Категория:" 
                           VerticalAlignment="Center" 
                           Margin="0,0,10,0"
                           FontWeight="SemiBold"/>

                <ComboBox x:Name="CategoryComboBox" 
                          Width="200" 
                          Height="35"
                          DisplayMemberPath="Name"
                          SelectedIndex="0">
                    <ComboBoxItem Content="Все категории"/>
                </ComboBox>

                <TextBlock Text="Поиск:" 
                           VerticalAlignment="Center" 
                           Margin="30,0,10,0"
                           FontWeight="SemiBold"/>

                <TextBox x:Name="SearchTextBox" 
                         Width="300" 
                         Height="35" 
                         Padding="10"/>

                <Button Content="Поиск" 
                        Width="100" 
                        Height="35"
                        Margin="20,0,10,0"
                        Click="SearchButton_Click"
                        Background="#4A90E2"
                        Foreground="White"/>

                <Button Content="Сбросить" 
                        Width="100" 
                        Height="35"
                        Click="ResetButton_Click"
                        Background="#95A5A6"
                        Foreground="White"/>
            </StackPanel>
        </Border>

        <!-- Контейнер для товаров -->
        <Grid Grid.Row="1">
            <!-- Прогресс-бар загрузки -->
            <ProgressBar x:Name="LoadingProgressBar"
                         Height="20"
                         IsIndeterminate="True"
                         Visibility="Collapsed"
                         VerticalAlignment="Top"
                         Margin="20"/>

            <!-- Сетка товаров -->
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <WrapPanel x:Name="ProductsPanel" 
                           HorizontalAlignment="Center" 
                           Margin="20"/>
            </ScrollViewer>

            <!-- Сообщение, если нет товаров -->
            <TextBlock x:Name="NoProductsText" 
                       Text="Товары не найдены" 
                       Visibility="Collapsed"
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center"
                       FontSize="18"
                       Foreground="#7F8C8D"/>
        </Grid>
    </Grid>
</Page>
